<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_remisiones" model="res.groups">
        <field name="name">Ver Remisiones</field>
        <field name="comment">permiso para visualizar sólo documentos definido en el
            Tipo documento como Remisiones</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
    </record>

    <record id="group_cfdi" model="res.groups">
        <field name="name">Ver CFDI</field>
        <field name="comment">permiso para visualizar sólo documentos definido en el
            Tipo documento como CFDI </field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
    </record>

    <record id="group_vacios" model="res.groups">
        <field name="name">Ver Vacíos</field>
        <field name="comment">permiso para visualizar sólo documentos sin definir en el
            Tipo documento o los que están en blancos/vacíos </field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
    </record>

     <record id="group_todos" model="res.groups">
        <field name="name">Ver Todos</field>
        <field name="comment">visualizar todos los documentos</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
    </record>
</odoo>