<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale.report_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-if="doc.amount_transfer_fee > 0" t-call="eor_sale.report_saleorder_itc_document"
                   t-lang="doc.partner_id.lang"/>
                <t t-else="" t-call="eor_sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
    <template id="report_saleorder_document">
        <t t-call="eor_sale.sale_external_layout">

            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="page" style="padding-top: 10px; border-top: 1px solid black; font-size:14px;">
                <style>
                    .content {
                    font-family: Arial, Verdana, sans-serif !important;
                    }
                    .content *{
                    font-family: inherit !important;
                    }
                </style>
                <div class="oe_structure"/>
                <div class="content">
                    <div class="row">
                        <!--INFORMACIÓN DE EMPRESA-->
                        <div class="col-4">

                            <div>
                                <strong t-field="doc.company_id.partner_id.name"/>
                            </div>
                            <div>
                                <span t-field="doc.company_id.partner_id.street"/>
                                <span t-field="doc.company_id.partner_id.street2"/>
                            </div>
                            <div>
                                <span t-field="doc.company_id.partner_id.city"/>,
                                <span t-field="doc.company_id.partner_id.state_id"/>
                            </div>
                            <div>
                                <span t-field="doc.company_id.partner_id.country_id"/>
                                <span t-field="doc.company_id.partner_id.zip"/>
                            </div>
                            <div>
                                <span>RFC:</span>&#160;<span t-field="doc.company_id.rfc"/>
                            </div>
                            <div>
                                <span>Teléfono:</span>&#160;<span t-field="doc.company_id.phone"/>
                            </div>
                        </div>

                        <div class="col-4">
                            <div t-if="doc.date_order">
                                <strong t-if="doc.state not in ['draft','sent']">Fecha de pedido:</strong>
                                <p t-field="doc.date_order"/>
                            </div>
                            <div t-if="doc.user_id.name">
                                <strong>Vendedor:</strong>
                                <p t-field="doc.user_id"/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th class="text-left">Clave</th>
                                <th class="text-left">Descripción</th>
                                <th class="text-right">Cantidad</th>
                                <th class="text-right">Unidad</th>
                                <th class="text-right">Precio unitario</th>
                                <th class="text-right">Precio x pieza</th>
                                <th class="text-right">Sub-Total</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                   groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold' if line.display_type == 'line_section' else 'font-italic' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td>
                                            <span t-field="line.product_id.default_code"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom_qty" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_unit" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.precio_x_pieza"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_subtotal"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="is-subtotal text-right">
                                <td t-att-colspan="colspan">
                                    <strong class="mr16">Artículos:</strong>
                                    <span t-esc="len(doc.order_line)"/>
                                </td>
                                <td>
                                    <strong class="mr16">Total Unidades:</strong>
                                    <span t-esc="sum(doc.mapped('order_line.product_uom_qty'))"/>
                                </td>
                                <td></td>
                                <td></td>
                                <td colspan="3" rowspan="2">
                                    <div name="total">
                                        <table class="table table-sm">
                                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                                <td>
                                                    <strong>Subtotal</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_untaxed"/>
                                                </td>
                                            </tr>
                                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                                <tr style="border-bottom:1px solid #dddddd;">
                                                    <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                        <td>
                                                            <span t-esc="amount_by_group[0]"/>
                                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;
                                                                <t t-esc="amount_by_group[2]"
                                                                   t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                            </span>
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="amount_by_group[1]"
                                                                  t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td>
                                                            <span t-esc="amount_by_group[0]"/>
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="amount_by_group[1]"
                                                                  t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <strong t-field="doc.amount_total"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border-top: none !important;">
                                    <strong>Observaciones:</strong>
                                    <p t-field="doc.x_obervaciones"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <p class="text-center" style="font-style: italic;" t-field="doc.note"/>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    <template id="sale_external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <div class="header">
            <div class="row">
                <div class="col-2">
                    <img t-if="doc.company_id.logo"
                         t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)"
                         style="max-height: 130px;max-width:130px;"/>
                </div>
                <div class="col-4">
                    <h3 class="text-left" style="display:inline-block;">
                            <span>Pedido #:</span>
                            <span t-field="doc.name"/>
                    </h3>
                </div>
                <div class="col-6 text-right mt8" style="font-size:14px;">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <span class="page"/>
                        </li>
                        <li class="list-inline-item">/</li>
                        <li class="list-inline-item">
                            <span class="topage"/>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

        <div class="footer text-center">
            <br/>
            <span style="font-size:14px; font-style: italic;">¡ Gracias por su preferencia, vuelva pronto !</span>
        </div>
    </template>
    <template id="report_saleorder_itc_document">
        <t t-call="eor_sale.itc_sale_external_layout">
            <style>
                #devolution-table{
                width:100%;
                }
                #devolution-table tr{
                height:20px;
                }
                #devolution-table .body_row td{
                border:1px solid black;
                }
                #devolution-table thead tr th{
                border:1px solid black;
                text-align:center;
                text-transform:uppercase;
                }
                .tag_total{
                text-align:right;
                }
                .square_total{
                border:1px solid black;
                }
                .group_row{
                width:100%;
                margin-top:10px;
                }
                .group_col{
                width:50%;
                text-align:center;
                }
                .separator-space{
                margin-top:50px;
                }
                .separator-space-20{
                margin-top:20px;
                }
                .page {
                    font-family: Arial, Verdana, sans-serif !important;
                }
                .page *{
                    font-family: inherit !important;
                }

            </style>
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="page" style="padding-top: 10px; border-top: 1px solid black; font-size:14px;">
                <div class="oe_structure"/>
                <div class="row">
                    <!--INFORMACIÓN DE EMPRESA-->
                    <div class="col-4">
                        <div>
                            <span t-field="doc.company_id.partner_id.name"/>
                        </div>
                        <div>
                            <span t-field="doc.company_id.partner_id.street"/>
                            <span t-field="doc.company_id.partner_id.street2"/>
                        </div>
                        <div>
                            <span t-field="doc.company_id.partner_id.city"/>,
                            <span t-field="doc.company_id.partner_id.state_id"/>
                        </div>
                        <div>
                            <span t-field="doc.company_id.partner_id.country_id"/>
                            <span t-field="doc.company_id.partner_id.zip"/>
                        </div>
                        <div>
                            RFC: <span t-field="doc.company_id.rfc"/>
                        </div>
                        <div>
                            <span>Teléfono:</span>&#160;<span t-field="doc.company_id.phone"/>
                        </div>
                    </div>
                    <div class="col-4">
                        <div t-if="doc.date_order">
                            <strong>Fecha de venta:</strong>
                            <p t-field="doc.date_order"/>
                        </div>
                        <div t-if="doc.user_id.name">
                            <strong>Vendedor:</strong>
                            <p t-field="doc.user_id"/>
                        </div>
                    </div>
                    <!--ATENCIÓN Y DIRECCIÓN DE ENVIO-->
                    <div class="col-4">
                        <strong>Cliente:</strong>
                        <div t-field="doc.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": False}'/>
                        <p t-if="doc.partner_id.rfc">
                            <span t-field="doc.partner_id.rfc"/>
                        </p>
                    </div>
                </div>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="5"/>
                            <th class="text-left">Clave/Descripción</th>
                            <th class="text-right">Cantidad</th>
                            <th class="text-right">Unidad</th>
                            <th class="text-right">Precio unitario</th>
                            <th class="text-right">Impuesto</th>
                            <th class="text-right">Precio Neto</th>
                            <th class="text-right">Precio x pieza</th>
                            <th class="text-right">Sub-Total</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>
                            <tr t-att-class="'bg-200 font-weight-bold' if line.display_type == 'line_section' else 'font-italic' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_uom_qty"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit_tax"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.precio_x_pieza"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                        <tr>
                            <td>Artículos:
                                <b>
                                    <t t-esc="len(doc.order_line)"/>
                                </b>
                            </td>
                            <td>Unidades:
                                <b>
                                    <t t-esc="sum(doc.mapped('order_line.product_uom_qty'))"/>
                                </b>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                <div class="row" style="width: 100%; margin-left: 2px">
                    <div style="width: 70%;">
                        <p>Observaciones:</p>
                    </div>
                    <div style="width: 30%;">
                        <div name="total">
                            <div>
                                <table class="table table-sm">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <span>Impuestos</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_tax"/>
                                        </td>
                                    </tr>
                                    <tr style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <span>Cargo por Traspaso(</span>
                                            <span t-field="doc.transfer_fee_id"/>
                                            <span>%)</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_transfer_fee"
                                                  t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <strong><span t-field="doc.amount_total"/></strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
<!--                <span t-field="doc.note"/>-->
                <div class="row" style="text-align:center; font-style: italic">
                    <t t-esc="doc.note"/>
                </div>
                <div class="separator-space-20">
                    <table id="devolution-table">
                        <thead>
                            <tr>
                                <th>Clave</th>
                                <th>Devolución/Producto</th>
                                <th>Cant./unidad</th>
                                <th>Precio U.</th>
                                <th>Importe</th>
                                <th>Motivo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="dev_index" t-value="0"/>
                            <t t-foreach="doc.order_line" t-as="line">
                                <t t-if="5 > dev_index">
                                    <tr class="body_row">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <t t-set="dev_index" t-value="dev_index + 1"/>
                                </t>
                            </t>
                        </tbody>
                        <ftoot>
                            <tr class="footer_row">
                                <td colspan="4" class="tag_total">
                                    <span>TOTAL A DESCONTAR+CARGO POR TRASPASO(%):</span>
                                </td>
                                <td class="square_total"></td>
                                <td></td>
                            </tr>
                            <tr class="footer_row">
                                <td colspan="4" class="tag_total">
                                    <span>NETO A PAGAR:</span>
                                </td>
                                <td class="square_total"></td>
                                <td></td>
                            </tr>
                        </ftoot>
                    </table>
                    <table class="group_row">
                        <tr>
                            <td class="group_col">RECEPCIÓN / DEVOLUCIÓN SUCURSAL</td>
                            <td class="group_col">REPARTIDOR ALMACÉN CENTRAL</td>
                        </tr>
                    </table>
                    <table class="separator-space group_row">
                        <tr>
                            <td class="group_col">
                                ______________________________________________
                                <br/>
                                NOMBRE Y FIRMA
                            </td>
                            <td class="group_col">
                                ______________________________________________
                                <br/>
                                NOMBRE Y FIRMA
                            </td>
                        </tr>
                    </table>
                    <article class="separator-space-20">
                        <h6 class="text-center">RECIBÍ DE CONFORMIDAD</h6>
                        <p>Debo(emos) y por este pagaré me(nos) obligo(amos) a pagar a la vista incondicionalmente a la
                            orden de Grupo Abarrotero Guererrense, S.A. de
                            C.V. la cantidad de: <b>$_________________ (_________________________________________/100
                                M.N.</b>) valor de la mercancía que he(mos)
                            recibido de conformidad el <b>______/_________/___________</b>.
                        </p>
                    </article>
                    <div class="text-center separator-space">
                        <p>_______________________________________<br/>NOMBRE Y FIRMA ENCARGADO(A)
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="itc_sale_external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <div class="header">
            <!--EMPIEZA LOGO-->
            <div style="display: inline-block">
                <img t-if="doc.company_id.logo"
                     t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)"
                     style="max-height: 130px;max-width:130px;"/>
            </div>
            <!--TERMINA LOGO-->
            <h2 style="display: inline-block; width: 33.33333%;">
                <div t-if="doc.date_order">
                    <span>Pedido #:</span>
                    <span t-field="doc.name"/>
                </div>
            </h2>
            <h2 style="display: inline-block; width: 50%;text-align: right;">
<!--            <h5 style="display: inline-block; width: 50%; text-align: right;">-->
                <div t-if="doc.intercompany_transfer_id">
<!--                    <strong>Ref ICT:</strong>-->
                    <p t-field="doc.intercompany_transfer_id"/>
                </div>
<!--            </h5>-->
            </h2>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <div style="font-size: 10px; color: #1e81c0;">
                    <p>
                        <b>MOTIVO DE LA DEVOLUCIÓN:</b>
                        1. NO REALIZÓ EL PEDIDO / 2. PRODUCTO EN MAL ESTADO / 3. PRODUCTO EQUIVOCADO / 4. PRODUCTO
                        FALTANTE /
                        <br/>
                        5. PRODUCTO SOBRANTE / 6. ERROR DE SISTEMA / 7. OTRO
                        (ESPECIFICAR)___________________________________________________________________
                    </p>
                </div>

                <div class="text-muted">
                    Page:
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>
</odoo>