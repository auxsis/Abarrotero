<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	<record id="inter_company_transfer_ept_account_form_view" model="ir.ui.view">
            <field name="name">inter.company.transfer.ept.invoice.view.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="amount_tax" position="after">
                        <field name="intercompany_transfer_id" invisible="1"/>
                        <field name="amount_transfer_fee" attrs="{'invisible':[('intercompany_transfer_id','=',False)]}"/>
                    </field>
                </data>
            </field>
        </record>
	</data>
</odoo>